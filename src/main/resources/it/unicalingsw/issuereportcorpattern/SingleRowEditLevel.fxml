<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<HBox fx:id="base" alignment="CENTER_RIGHT" prefHeight="40.0" xmlns="http://javafx.com/javafx/21 " xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unicalingsw.issuereportcorpattern.controller.SingleRowEditLevel">
<children>
    <TextField fx:id="nameTextField" prefHeight="70.0" HBox.hgrow="ALWAYS">
        <HBox.margin>
            <Insets />
        </HBox.margin>
    </TextField>
    <Spinner fx:id="levelSpinner" editable="true" maxWidth="130.0" minWidth="0.0" prefHeight="40.0" prefWidth="65.0" HBox.hgrow="ALWAYS">
        <HBox.margin>
            <Insets left="10.0" />
        </HBox.margin>
    </Spinner>
    <Button fx:id="resetButton" minWidth="36.0" mnemonicParsing="false" prefHeight="81.0" prefWidth="36.0">
        <graphic>
            <FontIcon iconLiteral="mdi2r-restart" selectionEnd="1" textAlignment="CENTER" wrappingWidth="20.0">
                <font>
                    <Font size="18.0" />
                </font>
            </FontIcon>
        </graphic>
        <font>
            <Font size="18.0" />
        </font>
        <HBox.margin>
            <Insets left="2.0" />
        </HBox.margin>
    </Button>
    <Button fx:id="deleteButton" minWidth="36.0" mnemonicParsing="false" prefHeight="81.0" prefWidth="36.0">
        <graphic>
            <FontIcon iconLiteral="mdi2d-delete" selectionEnd="1" textAlignment="CENTER" wrappingWidth="20.0">
                <font>
                    <Font size="18.0" />
                </font>
            </FontIcon>
        </graphic>
        <font>
            <Font size="18.0" />
        </font>
        <HBox.margin>
            <Insets left="2.0" />
        </HBox.margin>
    </Button>
      <Group fx:id="helperGroup" visible="false" />
</children>
</HBox>
